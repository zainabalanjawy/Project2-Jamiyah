    <img src="<%=  currentUser.profileImage%>" alt="Avatar" class="avatar">
    <div class="container-profile">
        <div class="profile-section">
           
            <div class="signup-form">
                <form action="/user/profile" method="post" class="user-info">
                    <div class="form-group">
                        <label class="boldboy">Name</label>
                        <input type="text" name="name" value="<%= currentUser.name %>" class="form-control" placeholder="Name">
                     </div>
                   <div class="form-group">
                      <label class="boldboy">Email Address</label>
                      <input type="email" name="email" value="<%= currentUser.email %>" class="form-control" placeholder="Email">
                   </div>
                   <div class="form-group">
                      <label class="boldboy">Phone</label>
                      <input type="text" name="phone" value="<%= currentUser.phone %>" class="form-control" placeholder="Phone">
                   </div>
                   <div>
                    <input type="hidden" value="<%= currentUser._id %>" name="id">
                   </div>
                   <div class="link-functions">
                    <a class="login" href="/account/details">Balance</a>
                    <input type="submit" value="Update" class="login">
                    <a class="login" href="/jamiyah/history">History</a>
                    <a class="login logout" href="/auth/signout">Logout</a>
                   </div>
                </form>
             </div>
        </div>
